<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dhyan.expenseCalculator.ui.fragments.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_autoFragment"
            app:destination="@id/autoFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_homeFragment_to_medicineFragment"
            app:destination="@id/medicineFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_homeFragment_to_doctorFragment"
            app:destination="@id/doctorFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_homeFragment_to_hospitalFragment"
            app:destination="@id/hospitalFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_homeFragment_to_labFragment"
            app:destination="@id/labFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_homeFragment_to_creditFragment"
            app:destination="@id/creditFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_homeFragment_to_shopFragment"
            app:destination="@id/shopFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/totalFragment"
        android:name="com.dhyan.expenseCalculator.ui.fragments.TotalFragment"
        android:label="Total"
        tools:layout="@layout/fragment_total" />
    <fragment
        android:id="@+id/billFragment"
        android:name="com.dhyan.expenseCalculator.ui.fragments.BillFragment"
        android:label="Bills"
        tools:layout="@layout/fragment_bill" />
    <fragment
        android:id="@+id/autoFragment"
        android:name="com.dhyan.expenseCalculator.ui.fragments.auto.AutoFragment"
        android:label="Auto"
        tools:layout="@layout/fragment_auto" >
        <action
            android:id="@+id/action_autoFragment_to_autoViewDetailsFragment"
            app:destination="@id/autoViewDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/creditFragment"
        android:name="com.dhyan.expenseCalculator.ui.fragments.CreditFragment"
        android:label="Credit"
        tools:layout="@layout/fragment_credit" />
    <fragment
        android:id="@+id/doctorFragment"
        android:name="com.dhyan.expenseCalculator.ui.fragments.DoctorFragment"
        android:label="Doctor"
        tools:layout="@layout/fragment_doctor" />
    <fragment
        android:id="@+id/hospitalFragment"
        android:name="com.dhyan.expenseCalculator.ui.fragments.HospitalFragment"
        android:label="Hospital"
        tools:layout="@layout/fragment_hospital" />
    <fragment
        android:id="@+id/labFragment"
        android:name="com.dhyan.expenseCalculator.ui.fragments.LabFragment"
        android:label="Lab"
        tools:layout="@layout/fragment_lab" />
    <fragment
        android:id="@+id/medicineFragment"
        android:name="com.dhyan.expenseCalculator.ui.fragments.MedicineFragment"
        android:label="Medicine"
        tools:layout="@layout/fragment_medicine" />
    <fragment
        android:id="@+id/shopFragment"
        android:name="com.dhyan.expenseCalculator.ui.fragments.shop.ShopFragment"
        android:label="Shop"
        tools:layout="@layout/fragment_shop" />
    <fragment
        android:id="@+id/autoViewDetailsFragment"
        android:name="com.dhyan.expenseCalculator.ui.fragments.auto.autoDetails.AutoDetailsFragment"
        android:label="AutoDetails"
        tools:layout="@layout/fragment_auto_details"
        />

</navigation>